{
  "version": 2,
  "builds": [
    {
      "src": ".",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}
